<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c47c2b"
    tools:context=".fragments.ProfileFragment">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile_final" />

    <TextView
        android:id="@+id/et_profileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_profile"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white_color"
        android:gravity="center"
        android:padding="5dp"
        android:text="John Doe"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/et_profilePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_profileName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white_color"
        android:gravity="center"
        android:padding="5dp"
        android:text="70387653363"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/et_profileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_profilePhone"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white_color"
        android:gravity="center"
        android:padding="5dp"
        android:text="ashihmailinhfd@gmail.com"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/et_profileAdress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_profileEmail"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@color/white_color"
        android:gravity="center"
        android:padding="5dp"
        android:text="Address"
        android:textSize="20sp" />


</RelativeLayout>